<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    
    android:id="@+id/guiTemplateLayout1"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@android:color/transparent"
    android:layout_height="fill_parent">
    
    
      <LinearLayout
		android:id="@+id/mainButtons"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/blacktransparentlayerbottom"
	    android:gravity="bottom"	    
	    android:layout_alignParentBottom="true">

    <!-- android:src="@drawable/gui_almalence_gallery" -->
          	<RelativeLayout android:id="@+id/gallery_control"
            android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="@dimen/paramsLayoutHeight"
			android:gravity="center">
				<LinearLayout android:layout_height="@dimen/paramsLayoutHeight"			    
		 	 	    android:layout_width="match_parent"
		 	 	    android:orientation="vertical"
		 	 	    android:layout_centerInParent="true"
		 	 	    android:gravity="center">
	            <com.almalence.ui.RotateImageView
					android:id="@+id/buttonGallery"								
					android:layout_gravity="center_horizontal"
					android:src="@drawable/gui_almalence_gallery"									
					android:background="@android:color/transparent"				
					android:layout_height="@dimen/paramsLayoutHeight"
					android:layout_width="@dimen/paramsLayoutHeight"	
					android:scaleType="fitXY"
			   		android:onClick="onButtonClick">
				</com.almalence.ui.RotateImageView>
				</LinearLayout>
				<LinearLayout android:layout_height="@dimen/paramsLayoutHeight"
		 	 	    android:layout_width="match_parent"
		 	 	    android:orientation="vertical"
		 	 	    android:layout_centerInParent="true"
		 	 	    android:gravity="center">
				<ImageView
					android:id="@+id/buttonGallery2"
					android:src="@drawable/almalence_gui_processing_scanner"
					android:layout_gravity="center_horizontal"
					android:scaleType="centerCrop"
					android:background="@android:color/transparent"
					android:layout_height="@dimen/paramsLayoutHeightScanner"
					android:layout_width="@dimen/paramsLayoutHeightScanner"
			   		android:onClick="onButtonClick"
			   		android:visibility="gone">
				</ImageView>
				</LinearLayout>
			</RelativeLayout>
		
          	<LinearLayout 
          	    android:layout_height="@dimen/shutterHeight"
	 	 	    android:layout_width="match_parent"
	 	 	    android:orientation="vertical"
	 	 	    android:gravity="center"	
	 	 	    android:layout_gravity="bottom"	    			 	 	    
				android:layout_weight="1">
				
          	    <LinearLayout 
	          	    android:id="@+id/buttonShutterContainer"
	          	    android:layout_height="@dimen/shutterHeight"
		 	 	    android:layout_width="wrap_content"
		 	 	    android:orientation="vertical"
		 	 	    android:gravity="bottom"	
		 	 	    android:layout_gravity="center">
          	    
			 	 	<com.almalence.ui.RotateImageView
						android:id="@+id/buttonShutter"
						android:src="@drawable/button_shutter"				
						android:background="@android:color/transparent"			
						android:layout_height="@dimen/shutterHeight"
						android:layout_width="@dimen/shutterHeight"
						android:scaleType="fitXY"
						android:paddingLeft="0dp"
						android:paddingRight="0dp"
						android:paddingBottom="0dp"
						android:paddingTop="0dp"
				   		android:layout_gravity="bottom"
				   		android:onClick="onButtonClick"/>
	 	 	   </LinearLayout>	 	
		 	</LinearLayout>	
		 	
	 	 	<LinearLayout android:layout_height="@dimen/paramsLayoutHeight"
	 	 	    android:layout_width="match_parent"
	 	 	    android:orientation="vertical"
	 	 	    android:gravity="center"	    			 	 	    
				android:layout_weight="1">
	 	 	<com.almalence.ui.RotateImageView
				android:id="@+id/buttonSelectMode"
				android:src="@drawable/button_selectmode"
				android:layout_gravity="center_horizontal"
				android:background="@android:color/transparent"
				android:layout_height="@dimen/paramsLayoutHeight"
				android:layout_width="@dimen/paramsLayoutHeight"	
				android:scaleType="fitXY"							
		   		android:onClick="onButtonClick">
		 	</com.almalence.ui.RotateImageView>
		 	</LinearLayout>
 	</LinearLayout>

		 	      
    <RelativeLayout
       android:id="@+id/fullscreenLayout"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:orientation="vertical"    
       android:background="@android:color/transparent"   
       android:visibility="gone">
	</RelativeLayout>
      
	 	
	<RelativeLayout android:id="@+id/modeLayout"
       		android:background="@drawable/blacktransparentlayerpulldownmenu"
       		android:orientation="vertical"
       		android:layout_width="@dimen/modeLayoutWidth"
       		android:layout_height="wrap_content"        		
    		android:layout_gravity="bottom"
    		android:layout_alignParentRight="true"
    		android:layout_marginRight="5dp"
    		android:padding="10dp"
    		android:layout_above="@+id/mainButtons"
			android:visibility="gone">
				<GridView  
				    android:id="@+id/modeGrid"
				    android:layout_width="fill_parent" 
				    android:layout_height="wrap_content"
				    android:numColumns="3"
				    android:horizontalSpacing="5dp"
				    android:stretchMode="columnWidth"
				    android:gravity="center"					    
				    android:visibility="gone"
				/>
	</RelativeLayout>
	
</RelativeLayout>
